{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "remoteCache": {
    "timeout": 300,
    "uploadTimeout": 300
  },
  "tasks": {
    "build": {
      "dependsOn": ["bundle", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "bundle": {
      "dependsOn": ["^bundle"],
      "outputs": ["dist"]
    },
    "bundle:watch": {
      "dependsOn": ["^bundle:watch"]
    },
    "lint": {
      "dependsOn": ["bundle", "^lint"]
    },
    "typecheck": {
      "dependsOn": ["bundle", "^typecheck"]
    },
    "dev": {
      "dependsOn": ["bundle"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["bundle"]
    },
    "format:check": {}
  }
}
